---
import {
    FacebookShareButton,
    LinkedinShareButton,
    TwitterShareButton,
} from "react-share";

function createStyleOverride() {
    return { color: undefined };
}

function createShareButtonProps({ url, title, summary }: { url: string; title: string; summary: string }) {
    return {
        url,
        source: url,
        title,
        summary,
        style: createStyleOverride(),
        className:
            "flex justify-center items-center text-slate-400 dark:text-slate-500 hover:text-sky-500 dark:hover:text-sky-500 transition duration-150 ease-in-out",
    };
}

const { url, title, summary } = Astro.props;
const shareButtonProps = createShareButtonProps({ url, title, summary });
